{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext", 
    "module": "node12",
    "moduleResolution": "node",
    "outDir": "./dist",                            
    "rootDir": "./src",              
    "strict": true, 
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,    
    "allowSyntheticDefaultImports": true,                           
    "esModuleInterop": true,
    "skipLibCheck": true,  
    "skipDefaultLibCheck": true,                         
    "forceConsistentCasingInFileNames": true,    
  } 
}